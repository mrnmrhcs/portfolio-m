{
  "name": "portfolio-m",
  "description": "Portfolio Website",
  "version": "2.0.0",
  "main": "gulpfile.js",
  "scripts": {
    "start": "$env:NODE_ENV = 'development'; .\\run\\start.ps1",
    "build": "$env:NODE_ENV = 'production'; .\\run\\build.ps1",
    "build:staging": "$env:NODE_ENV = 'staging'; .\\run\\build.ps1",
    "deploy": "$env:NODE_ENV = 'production'; .\\run\\deploy.ps1",
    "deploy:staging": "$env:NODE_ENV = 'staging'; .\\run\\deploy.ps1"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "browser-sync": "2.27.5",
    "del": "6.0.0",
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.24.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "favicons": "6.2.2",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "8.0.0",
    "gulp-babel": "8.0.0",
    "gulp-cache": "1.1.3",
    "gulp-concat": "2.6.1",
    "gulp-debug": "4.0.0",
    "gulp-if": "3.0.0",
    "gulp-imagemin": "7.1.0",
    "gulp-sass": "5.0.0",
    "gulp-terser": "2.0.1",
    "sass": "1.38.0",
    "stylelint": "13.13.1",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.20.1"
  },
  "dependencies": {
    "jquery": "3.6.0"
  },
  "browserslist": {
    "production": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ],
    "legacyBrowsers": [
      "> 1%",
      "last 2 versions",
      "Firefox ESR"
    ],
    "modernBrowsers": [
      "last 2 Chrome versions",
      "not Chrome < 60",
      "last 2 Safari versions",
      "not Safari < 10.1",
      "last 2 iOS versions",
      "not iOS < 10.3",
      "last 2 Firefox versions",
      "not Firefox < 54",
      "last 2 Edge versions",
      "not Edge < 15"
    ]
  },
  "stylelint": {
    "extends": [
      "./.stylelintrc"
    ],
    "ignoreFiles": [
      "dist/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "eslint-config-standard"
    ],
    "rules": {
      "camelcase": "off",
      "no-unneeded-ternary": "off",
      "no-unused-vars": "off",
      "no-undef": "off",
      "spaced-comment": "off"
    }
  },
  "eslintIgnore": [
    "dist/**"
  ],
  "author": "Marian Schramm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrnmrhcs/portfolio-m/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrnmrhcs/portfolio-m.git"
  }
}
